<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="exe.porgatory.porgatory.MainActivity">

    <LinearLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D3D3D3"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="1dp"
                android:background="#FFFFFF"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Left Side"
                android:textColor="	#B22222"
                android:textAlignment="center"
                android:textStyle="bold|italic" />

            <TextView

                android:id="@+id/leftled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="128px"
                android:layout_marginRight="128px"
                android:layout_marginTop="64px"
                android:fontFamily="casual"
                android:text="Left LED"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/leftlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="128px"
                android:layout_marginRight="128px"
                android:layout_marginTop="64px"
                android:fontFamily="casual"
                android:text=""
                android:textColor="	#B22222"
                android:textAlignment="center"

                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="128px"
                android:layout_marginRight="128px"
                android:layout_marginTop="64px"
                android:fontFamily="casual"
                android:text="Left MQ2"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leftmq2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="128px"
                android:layout_marginRight="128px"
                android:layout_marginTop="64px"
                android:layout_marginBottom="64px"
                android:fontFamily="casual"
                android:text=""
                android:textColor="	#B22222"
                android:textAlignment="center"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D3D3D3"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="190dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="1dp"
                android:background="#FFFFFF"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Right Side"
                android:textColor="	#B22222"
                android:textAlignment="center"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="128px"
                android:layout_marginRight="128px"
                android:layout_marginTop="64px"
                android:fontFamily="casual"
                android:text="Right LED"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rightlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="128px"
                android:layout_marginRight="128px"
                android:layout_marginTop="64px"
                android:fontFamily="casual"
                android:text=""
                android:textColor="	#B22222"
                android:textAlignment="center"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/rightsmoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="128px"
                android:layout_marginRight="128px"
                android:layout_marginTop="64px"
                android:fontFamily="casual"
                android:text="Right MQ2"

                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rightmq2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="128px"
                android:layout_marginRight="128px"
                android:layout_marginTop="64px"
                android:layout_marginBottom="64px"
                android:fontFamily="casual"
                android:text=""
                android:textColor="	#B22222"

                android:textAlignment="center"
                android:textStyle="italic" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/statustab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/atas"
        android:layout_marginTop="10px"
        android:orientation="vertical"
        tools:ignore="NotSibling"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="260dp">
        <!--android:background="#7CFC00"-->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200px"
            android:layout_marginTop="20px"
            android:layout_marginRight="200px"
            android:fontFamily="casual"
            android:text="Fire Status :"
            android:textAlignment="center"
            android:textSize="64px"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/statusdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200px"
            android:layout_marginTop="20px"
            android:layout_marginRight="200px"
            android:fontFamily="casual"
            android:text="Normal"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="	#B22222"
            android:textSize="82px"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
